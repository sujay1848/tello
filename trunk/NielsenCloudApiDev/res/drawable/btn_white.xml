<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#eaeaea" />
            <stroke
                android:width="1dp"
                android:color="#b2b2b2" />
            <corners
                android:radius="8dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#eaeaea"
                android:endColor="#d6d6d6"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#b2b2b2" />
            <corners
                android:radius="9dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>