<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SettingsFragment" >

    <Button
        android:id="@+id/btnStreamUrls"
        style="@style/ButtonTextBlack14"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/btn_white"
        android:drawableRight="@drawable/arrow_right"
        android:gravity="left|center_vertical"
        android:text="Stream URL&apos;s"
        android:textSize="18dp" >
    </Button>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingRight="6dip" >

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        style="@style/settingsCell"
                        android:layout_width="wrap_content"
                        android:layout_weight=".1"
                        android:text="Config URL" />

                    <EditText
                        android:id="@+id/txtSdkCfgUrl"
                        style="@style/settingsCell"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >
                    </EditText>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        style="@style/settingsCell"
                        android:layout_width="wrap_content"
                        android:layout_weight=".1"
                        android:text="Application ID" />

                    <EditText
                        android:id="@+id/txtAppId"
                        style="@style/settingsCell"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >
                    </EditText>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        style="@style/settingsCell"
                        android:layout_width="wrap_content"
                        android:layout_weight=".1"
                        android:text="App Name" />

                    <EditText
                        android:id="@+id/txtAppName"
                        style="@style/settingsCell"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >
                    </EditText>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        style="@style/settingsCell"
                        android:layout_width="wrap_content"
                        android:layout_weight=".1"
                        android:text="App Version" />

                    <EditText
                        android:id="@+id/txtAppVersion"
                        style="@style/settingsCell"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >
                    </EditText>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        style="@style/settingsCell"
                        android:layout_width="wrap_content"
                        android:layout_weight=".1"
                        android:text="Client ID" />

                    <EditText
                        android:id="@+id/txtClientId"
                        style="@style/settingsCell"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >
                    </EditText>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        style="@style/settingsCell"
                        android:layout_width="wrap_content"
                        android:layout_weight=".1"
                        android:text="VCID" />

                    <EditText
                        android:id="@+id/txtVcId"
                        style="@style/settingsCell"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >
                    </EditText>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        style="@style/settingsCell"
                        android:layout_width="wrap_content"
                        android:layout_weight=".1"
                        android:text="Country Code" />

                    <EditText
                        android:id="@+id/txtCcode"
                        style="@style/settingsCell"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >
                    </EditText>
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>